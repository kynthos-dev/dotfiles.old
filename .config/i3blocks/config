command=/usr/lib/i3blocks/$BLOCK_NAME
separator_block_width=15
markup=pango




[weather]
command=i3weather
interval=3600

[volume]
interval=once
command=i3volume
signal=10

[memory]
label=💾
instance=mem;free
interval=30

[disk]
label=💽
interval=30

[iface]
label=🌐
#instance=wlan0
interval=10

[battery]
command=i3battery
interval=5

[time]
label=📅
command=echo $(date '+%Y %b %d (%a)  %I:%M%p') 🕓
interval=30

[wifi]
command=i3wifi
instance=wlp2s0
interval=10
